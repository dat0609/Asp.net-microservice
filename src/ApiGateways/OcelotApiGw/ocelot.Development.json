      "UpstreamHttpMethod": [
        "GET",
        "DELETE"
      ],
      "DownstreamPathTemplate": "/api/inventory/{id}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5006
        }
      ],
      "SwaggerKey": "inventory-service"
