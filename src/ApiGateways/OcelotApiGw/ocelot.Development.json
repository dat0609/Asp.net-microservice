{
  "GlobalConfiguration": {
      "BaseUrl": "http://localhost:5000"
  },
  "Routes": [
    {
      "UpstreamPathTemplate": "/customers/{username}",
      "UpstreamHttpMethod": [ "Get" ],
      "DownstreamPathTemplate": "/api/customers/{username}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5003
        }
      ],
      "SwaggerKey": "customer-service"
    },
    {
      "UpstreamPathTemplate": "/products/{id}",
      "UpstreamHttpMethod": [
        "GET"
      ],
      "DownstreamPathTemplate": "/api/products/{id}", 
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5002
        }
      ],
      "SwaggerKey": "product-service"
    },
    {
      "UpstreamPathTemplate": "/products",
      "UpstreamHttpMethod": [
        "GET"
      ],
      "DownstreamPathTemplate": "/api/products",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5002
        }
      ],
      "RateLimitOptions": {
        "ClientWhitelist": [],
        "EnableRateLimiting": true,
        "Period": "10s", 
        "PeriodTimespan": 10, // retry after 10 seconds
        "Limit": 5
      },
      "QoSOptions": {
        "ExceptionsAllowedBeforeBreaking": 2, // throw exception after 2s
        "DurationOfBreak": 1000,
        "TimeoutValue": 5000 // if service throws 2rd exception, wait 5s before retrying
      },
      "FileCacheOptions": {
        "TtlSeconds": 15,
        "Region": "General"
      }
    },    
    {
      "UpstreamPathTemplate": "/products",
      "UpstreamHttpMethod": [
        "POST"
      ],
      "DownstreamPathTemplate": "/api/products",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5002
        }
      ],
      "RateLimitOptions": {
        "ClientWhitelist": [],
        "EnableRateLimiting": true,
        "Period": "1s", 
        "PeriodTimespan": 10, // retry after 10 seconds
        "Limit": 1
      },
      "QoSOptions": {
        "ExceptionsAllowedBeforeBreaking": 2, // throw exception after 2s
        "DurationOfBreak": 1000,
        "TimeoutValue": 5000 // if service throws 2rd exception, wait 5s before retrying
      },
      "SwaggerKey": "product-service"
    },
    {
      "UpstreamPathTemplate": "/products/{any}",
      "UpstreamHttpMethod": [
        "PUT",
        "DELETE"
      ],
      "DownstreamPathTemplate": "/api/products/{any}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5002
        }
      ],
      //      "AuthenticationOptions": {
      //        "AuthenticationProviderKey": "Bearer",
      //        "AllowedScopes": []
      //      },
      "RouteClaimsRequirement": {
        "Role": "Admin"
      },
      "SwaggerKey": "product-service"
    },
    {
      "UpstreamPathTemplate": "/products/get-product-by-no/{productNo}",
      "UpstreamHttpMethod": [
        "GET"
      ],
      "DownstreamPathTemplate": "/api/products/get-product-by-no/{productNo}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5002
        }
      ],
      "SwaggerKey": "product-service"
    },
